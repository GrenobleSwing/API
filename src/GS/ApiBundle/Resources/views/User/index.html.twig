{% extends "GSApiBundle::layout.html.twig" %}

{% block gs_body %}
    {{ parent() }}

    <h2>Liste des utilisateurs</h2>

    <table id="gs_table" class="table table-striped table-hover nowrap">
        <thead>
            <tr>
                <th>Actions</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Derniere connection</th>
            </tr>
        <thead>
        <tfoot>
            <tr>
                <th>Actions</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Derniere connection</th>
            </tr>
        </tfoot>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.15/b-colvis-1.4.0/r-2.1.1/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#gs_table tfoot th').each(function () {
                var title = $(this).text();
                $(this).html('<input type="text" placeholder="Search ' + title + '" />');
            });

            // DataTable
            var table = $('#gs_table').DataTable({
                "scrollX": true,
                "ajax": {
                    "url": "{{ path('all_user') }}",
                    "dataSrc": ''
                },
                "columns": [
                    {
                        "data": 'id',
                        "render": function ( data, type, full, meta ) {
                            return '<a href="' +
                                    Routing.generate('edit_user', { 'id': data }) +
                                    '" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="top" title="Modifier">' +
                                    '<i class="glyphicon glyphicon-edit"></i>' +
                                    '</a>';
                        }
                    },
                    {
                        "data": 'email'
                    },
                    { "data": 'roles' },
                    {
                        "data": 'lastLogin',
                        "defaultContent": "<i>Not set</i>"
                    }
                ]
            });

            // Apply the search
            table.columns().every(function () {
                var that = this;

                $('input', this.footer()).on('keyup change', function () {
                    if (that.search() !== this.value) {
                        that
                                .search(this.value)
                                .draw();
                    }
                });
            });

        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.15/b-colvis-1.4.0/r-2.1.1/datatables.min.css"/>
{% endblock %}
